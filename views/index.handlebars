<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group mb-3">
          <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="button-addon2" value="{{keywords}}" />
          <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
        </div>
      </form>
      <div class="text-end">
        <a href="/restaurants/new"><button class="btn btn-primary">新增餐廳</button></a>
      </div>
    </div>
  </div>
</div>




  
  <!-- restaurant list -->
  <div class="container mt-5">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-md-3">
        {{#each restaurantsData}}
        <div class="col">
          <div class="card mb-2">
            {{!-- <img class="card-img-top " src="{{this.image}}" alt="{{this.name}}"> --}}
            <img src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2 mx-1"></i>{{this.category}}
              </div>
              <span class="badge rounded-pill text-bg-danger ">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="card-footer bg-transparent border-success mt-2 pe-0 pb-0">
                <div class="d-flex justify-content-end mx-0">
                  <a href="/restaurants/{{this._id}}" class="text-secondary mx-1"><button type="submit button"
                      class="btn btn-secondary">Detail</button></a>
                  <a href="/restaurants/{{this._id}}/edit" class="text-secondary mx-1"><button type="submit button"
                      class="btn btn-secondary">Edit</button></a>
                  <form action="/restaurants/{{this._id}}?_method=DELETE" method="post" style="display:inline">
                    <button type="submit button" class="btn btn-danger mx-1">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>